# Environment variables for AirSense application

# Database configuration
DATABASE_URL=sqlite:///./airsense.db

# NASA Earthdata credentials (required for NASA data access)
EARTHDATA_USERNAME=your_earthdata_username
EARTHDATA_PASSWORD=your_earthdata_password

# Optional: AirNow API key for additional ground station data
AIRNOW_API_KEY=your_airnow_api_key

# API configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1

# Logging configuration
LOG_LEVEL=INFO
LOG_FILE=logs/airsense.log

# Model configuration
MODEL_RETRAIN_SCHEDULE=0 2 * * 0  # Every Sunday at 2 AM (cron format)
MODEL_PATH=models/

# Data storage paths
DATA_PATH=data/
TEMPO_DATA_PATH=data/tempo/

# OpenAQ API configuration
OPENAQ_BASE_URL=https://api.openaq.org/v2
OPENAQ_RATE_LIMIT=0.1  # seconds between requests

# CORS configuration
CORS_ORIGINS=*
CORS_CREDENTIALS=true

# Optional: Redis configuration for caching
REDIS_URL=redis://localhost:6379/0

# Optional: Email configuration for alerts
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# Optional: Monitoring and alerting
SENTRY_DSN=your_sentry_dsn
